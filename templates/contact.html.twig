{% include '_header.html.twig' %}

{% include '_nav.html.twig' %}

    {% block content %}

        <form class="formulaire" action="">

            <div class="insidecheckboxes">
                <label for="story">How can I help you?</label>

                <textarea id="story" name="story" rows="7" cols="100">

                </textarea>
            </div>

            <div class="insidecheckboxes">

                <label for="email">
                    Enter your globex.com email:
                </label>

                <input type="email" id="email" pattern=".+@globex.com" size="30" required>

            </div>

            <div class="checkboxes">


                <p class="insidecheckboxes">
                    Stay tuned for more infos
                </p>

                <div class="insidecheckboxes">
                    <input type="checkbox" id="scales" name="agree"
                           checked>
                    <label for="scales">
                        I agree
                    </label>
                </div>
                

                <div class="insidecheckboxes">
                    <input type="checkbox" id="horns" name="agree">
                    <label for="horns">
                        I disagree
                    </label>
                </div>

            </div>
            

                <input class="soumettre" type="submit" value="Envoyer le formulaire">

        </form>
        
    {% endblock %}

